# Application Image

FROM node:14.7.0-alpine

ARG API_URI
ARG API_URI_DOCKER
ARG CDTN_API_URL
ARG DB_URI
ARG NODE_ENV
ARG APP_PORT

ENV API_URI=$API_URI
ENV CDTN_API_URL=$CDTN_API_URL
ENV DB_URI=$DB_URI
ENV NODE_ENV=$NODE_ENV
ENV APP_PORT=$APP_PORT

WORKDIR /app

COPY . .

RUN yarn --production --pure-lockfile
RUN yarn build

ENTRYPOINT ["yarn", "start"]
